#include "MemMap.h"
#include "Utils.h"
#include <util/delay.h>

int main(void){
	DDRD=0b11111000;
	while(1){
		if(ReadBit(PIND,0)==1){
			SetBit(PORTD,5);
			_delay_ms(1000);
			SetBit(PORTD,6);
			_delay_ms(1000);
			SetBit(PORTD,7);
			_delay_ms(1000);
			ClearBit(PORTD,7);
			_delay_ms(1000);
			ClearBit(PORTD,6);
			_delay_ms(1000);
			ClearBit(PORTD,5);
		}
		if(ReadBit(PIND,1)==1){
			for(unsigned char count=1;count<4;count++){
				SetBit(PORTD,(count+4)); //the LED are on PIN 5,6,7 so first press will be 1+4=5 and so on
				_delay_ms(500);
				while(ReadBit(PIND,1)==0);
			}
			ClearBit(PORTD,7);
			ClearBit(PORTD,6);
			ClearBit(PORTD,5);
		}
	}
}
