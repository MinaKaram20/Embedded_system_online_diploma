#include "MemMap.h"
#include "Utils.h"

int main(void){
	DDRD=0b11111000;
	while(1){
		if(ReadBit(PIND,0)==1){
			SetBit(PORTD,5);
			for(int delay=0;delay<1000;delay++);
			SetBit(PORTD,6);
			for(int delay=0;delay<1000;delay++);
			SetBit(PORTD,7);
			for(int delay=0;delay<1000;delay++);
			ClearBit(PORTD,7);
			for(int delay=0;delay<1000;delay++);
			ClearBit(PORTD,6);
			for(int delay=0;delay<1000;delay++);
			ClearBit(PORTD,5);
		}
	}
}
